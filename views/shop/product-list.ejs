<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid grid-cols-6">
                <% prods.forEach((product, index) => { %>
                    <article class="card product-item col-span-1">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageURL %>"
                                alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions grid grid-cols-2 gap-2.5">
                            <a href="/product/<%= product.id%>" class="border border-sky-500 rounded p-2.5 w-full">Details</a>
                            
                            
                            <form action="/card" method="post">
                                <button class="border border-sky-500 rounded p-2.5 w-full">Add to Cart</button>
                                <input type="hidden" name="productID" value="<%= product.id%>">
                            </form>   

                        </div>
                    </article>
                <% }) %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>